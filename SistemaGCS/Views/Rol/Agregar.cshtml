@model SistemaGCS.Models.Rol
@{
    ViewBag.Title = "Agregar";
}
<br />
<br />

<nav class="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/Rol/Index">Roles</a></li>
        <li class="breadcrumb-item active">@(Model.Id_rol > 0 ? Model.Nombre : "Nuevo Registro")</li>
    </ol>
</nav>


<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            @using (Html.BeginForm("Guardar", "Rol", FormMethod.Post, new { id = "frm-categoria" }))
            {
                @Html.HiddenFor(x => x.Id_rol)
                <div class="card">
                    <div class="card-header bg-primary text-white">Informacion de Rol</div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label for="Nombre" class="form-label">
                                <i class="fas fa-user"></i> Nombre
                            </label>
                            <div class="input-group">
                                @Html.TextBoxFor(x => x.Nombre, new { @class = "form-control" })
                                <span class="input-group-text">
                                    <i class="fas fa-user"></i>
                                </span>
                            </div>
                            @Html.ValidationMessageFor(x => x.Nombre, null, new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="card-footer text-end">
                        <button type="submit" class="btn btn-outline-primary">Guardar</button>
                        <a href="~/Rol" class="btn btn-outline-danger">Cancelar</a>
                    </div>
                    <br />
                </div>
            }
        </div>
    </div>
</div>
