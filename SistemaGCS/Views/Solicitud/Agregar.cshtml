@model SistemaGCS.Models.Solicitud
@{
    ViewBag.Title = "Agregar";
}
<br />
<br />
<nav class="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/Solicitud/Index">Solicitud</a></li>
        <li class="breadcrumb-item active">@(Model.Id_solicitud > 0 ? Model.Requerimiento : "Nuevo Registro")</li>
    </ol>
</nav>

@using (Html.BeginForm("Guardar", "Solicitud", FormMethod.Post, new { id = "frm-categoria", @class = "needs-validation", novalidate = "novalidate" }))
{
    @Html.HiddenFor(x => x.Id_solicitud)

    <div class="card">
        <div class="card-header bg-primary text-white">Información de Solicitud</div>
        <div class="card-body">

            <div class="form-group">
                @Html.LabelFor(x => x.Requerimiento)
                @Html.TextBoxFor(x => x.Requerimiento, new { @class = "form-control", required = "required" })
                <div class="invalid-feedback">Por favor, ingrese un requerimiento válido.</div>
            </div>
            <br />

            <div class="form-group">
                @Html.LabelFor(x => x.Descripcion)
                @Html.TextBoxFor(x => x.Descripcion, new { @class = "form-control", required = "required" })
                <div class="invalid-feedback">Por favor, ingrese una descripción válida.</div>
            </div>

        </div>

        <div class="card-footer text-right">
            <button type="submit" class="btn btn-primary">Guardar</button>
            <a href="~/Solicitud" class="btn btn-danger">Cancelar</a>
        </div>
        <br /><br /><br />
    </div>
}
