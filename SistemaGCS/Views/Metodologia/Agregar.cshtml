@model SistemaGCS.Models.Metodologia
@{ ViewBag.Title = "Agregar"; }

<br />
<br />
<nav class="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/Metodologia/Index">Metodologia</a></li>
        <li class="breadcrumb-item active">@(Model.Id_metodologia > 0 ? Model.Nombre +"," + Model.Nombre : "Nuevo Registro")</li>
    </ol>
</nav>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            @using (Html.BeginForm("Guardar", "Metodologia", FormMethod.Post, new { id = "frm-categoria" }))
            {
                @Html.HiddenFor(x => x.Id_metodologia)
                <div class="card">
                    <div class="card-header bg-primary text-white">Informacion de la Metodologia</div>
                    <div class="card-body">

                        <div class="mb-3">
                            <label for="Nombre" class="form-label">
                                <i class="fas fa-user"></i> Nombre de la metodologia
                            </label>
                            <div class="input-group">
                                @Html.TextBoxFor(x => x.Nombre, new { @class = "form-control" })
                                <span class="input-group-text">
                                    <i class="fas fa-user"></i>
                                </span>
                            </div>
                            @Html.ValidationMessageFor(x => x.Nombre, null, new { @class = "text-danger" })
                        </div>

                    </div>

                    <div class="card-footer text-end">
                        <button type="submit" class="btn btn-outline-primary">GUARDAR</button>
                        <a href="~/Metodologia" class="btn btn-outline-danger">CANCELAR</a>
                    </div>
                </div>
            }


        </div>
    </div>
</div>
